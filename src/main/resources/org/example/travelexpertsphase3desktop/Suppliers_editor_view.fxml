         <children>
            <Button fx:id="btnAdd" mnemonicParsing="false" text="Add Supplier">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnExit" mnemonicParsing="false" text="Exit">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
         <padding>
